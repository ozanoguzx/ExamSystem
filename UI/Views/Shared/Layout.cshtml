                        <a class="navbar-brand" href="@Url.Action("Index", "Student")"><img src="~/Assets/newassets/assets/images/bakampus-logo.png"></a>
                    </div>
                    <div class="collapse navbar-collapse" id="kampusNavbar">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-green">
                                <a href="@Url.Action("PastExam", "Student")">
