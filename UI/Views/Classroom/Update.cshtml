@{
    ViewBag.Title = "Sınıf Ekle";
    ViewBag.UstBaslik = "Sınıf Ekle";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}
@using DAL.Data
@using UI.Models
@model ClassroomVM
<link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" media="screen"
      href="http://tarruda.github.com/bootstrap-datetimepicker/assets/css/bootstrap-datetimepicker.min.css">
<script src="~/Assets/js/jquery-1.4.1.js"></script>


<section class="content_section">
    <div class="content row_spacer clearfix">
        <div class="hm-tabs tabs1">
            <ul class="tabs-body">
                <li data-content="inbox" class="selected">
                    <div class="form_row clearfix">
                    </div>
                    @using (Html.BeginForm("Update", "Classroom", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                        <div id="mainPanel">
                            <div class="form_row clearfix">
                                <hr style="margin-top:30px;" />
                                <div class="panel-body">
                                    <div class="col-lg-6 col-sm-6" id="student">
                                        <label for="birthday_day">
                                            <span class="hm_field_name">
                                                <b>
                                                    Ad
                                                </b>
                                            </span>
                                            <span class="hm_requires_star">*</span>
                                        </label>
                                        <input style="border-color:grey" class="form-control" type="text" name="Name" value="@Model.Name" required />
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body collapse in" id="openPanel" hidden="hidden">
                                <div class="form_row clearfix">
                                    <div class="my_col_third">
                                        <span class="hm_field_name">
                                            <b>
                                                EĞİTMEN
                                            </b>
                                        </span>
                                        <br />
                                        <select id="dropDownListClassroom" class="dropdown" name="TrainerID" required style="height:35px; border-color:ActiveCaption; border-radius:5px; ">
                                            <option style="color:grey" disabled selected value="">Seçiniz</option>
                                            @foreach (Trainer item in TempData["trainer"] as IEnumerable<Trainer>)
                                            {
                                                <option style="color:grey;" value="@item.Id">@item.FullName</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="my_col_third">
                                        <span class="hm_field_name">
                                            <b>
                                                OLUŞTURULMA TARİHİ
                                            </b>
                                        </span>
                                        <div id="datetimepicker2" class="input-append">
                                            @Html.TextBoxFor(m => m.CreatedDate, new { id = "birth-date", type = "date", @Value = Model.CreatedDate.ToString("yyyy-MM-dd"), @style = "height: 35px; width: 80%; border-color:ActiveCaption;border-radius:5px;", required = "required" })
                                            <span class="date" style="height:35px; width:40px;">
                                                <i data-time-icon="icon-time" data-date-icon="icon-calendar">
                                                </i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="my_col_third">
                                        <span class="hm_field_name">
                                            <b>
                                                KAPANIŞ TARİHİ
                                            </b>
                                        </span>
                                        <div id="datetimepicker2" class="input-append">
                                            @Html.TextBoxFor(m => m.ClosedDate, new { id = "birth-date", type = "date",@Value = Model.ClosedDate.ToString("yyyy-MM-dd"), @style = "height: 35px; width: 80%; border-color:ActiveCaption;border-radius:5px;", required = "required"})
                                            <span class="date" style="height:35px; width:40px;">
                                                <i data-time-icon="icon-time" data-date-icon="icon-calendar">
                                                </i>
                                            </span>
                                        </div>
                                    </div>
                                    <input type="hidden" name="Id" value="@Model.ID" />
                                    <div class="my_col_third">
                                        <div class="input-append">
                                            <button type="submit" class="btn btn-danger btn-block" style="height:35px; margin-top:22px; border-radius:5px;">
                                                Sınıf Güncelle
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </li>
            </ul>
        </div>
    </div>
</section>

